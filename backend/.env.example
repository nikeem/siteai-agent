# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=SiteAI Agent Backend
VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/siteai
DATABASE_URL_SYNC=postgresql://user:password@localhost/siteai

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (выберите один или оба)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (разделите запятыми несколько origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook

# Email для обратного звонка (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
